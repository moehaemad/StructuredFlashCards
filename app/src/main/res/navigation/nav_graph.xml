<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">
    <activity
        android:id="@+id/mainActivity"
        android:name="com.moehaemad.structuredflashcards.controller.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_mainActivity_to_loginMenu"
            app:destination="@id/loginMenu" />
    </activity>
    <activity
        android:id="@+id/loginMenu"
        android:name="com.moehaemad.structuredflashcards.controller.LoginMenu"
        android:label="activity_login_menu"
        tools:layout="@layout/activity_login_menu" >
        <action
            android:id="@+id/action_loginMenu_to_deckMenu"
            app:destination="@id/deckMenu" />
    </activity>
    <activity
        android:id="@+id/deckMenu"
        android:name="com.moehaemad.structuredflashcards.controller.DeckMenu"
        android:label="activity_deck_menu"
        tools:layout="@layout/activity_deck_menu" />
</navigation>